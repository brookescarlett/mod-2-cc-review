<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <%= e %>
  <% end %>
<% end %>

<%= form_for(@clown) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :weight %>
  <%= f.number_field :weight %>

  <%= f.label :creepy %>
  <%= f.check_box :creepy %>

  <%= f.submit %>

<% end %>
